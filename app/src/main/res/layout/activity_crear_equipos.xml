<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crear.CrearEquiposActivity"
    android:background="@color/fondo">
    >

    <RelativeLayout
        android:id="@+id/layoutsuperior"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/fondo_arriba">
        <ImageView
            android:id="@+id/imageView_perifl_dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/trofeo_ar" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
       android:layout_below="@id/layoutsuperior"
        android:id="@+id/recyclerViewEquipos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonConfirmarEquipos"
        android:padding="8dp"
        android:clipToPadding="false" />

    <Button
        android:id="@+id/buttonConfirmarEquipos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Equipos"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@color/confirm_boton"/>

</RelativeLayout>
